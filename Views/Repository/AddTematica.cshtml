@model projectMVC.Models.Tematica
@{
    ViewData["Title"] = "Repository Pattern - Tematicas";
    string FlashClass = (string) TempData["FlashClass"];
    string FlashMessage = (string) TempData["FlashMessage"];
}
<h1>Repository Pattern - Tem√°ticas - Add</h1>
@if(FlashClass != null)
{
    <div class="alert alert-@FlashClass alert-dismissible fade show" role="alert">
        @FlashMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="row">
    <form asp-controller="repository" asp-action="AddTematica" method="POST">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nombre" class="control-label">Nombre</label>
            <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre"/>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <hr/>
        <a asp-action="ListTematicas" asp-controller="repository" class="btn btn-primary">
            <i class="fas fa-plus"></i>Volver
        </a>
        <button type="submit" class="btn btn-success">
            <i class="fas fa-plus"></i>Crear
        </button>
    </form>
</div>
