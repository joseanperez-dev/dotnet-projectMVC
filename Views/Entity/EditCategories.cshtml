@model projectMVC.Models.Category
@{
    ViewData["Title"] = "Entity Framework - Categories";
    string FlashClass = (string) TempData["FlashClass"];
    string FlashMessage = (string) TempData["FlashMessage"];
}
<h1>Entity Framework - Categories - Edit</h1>
@if(FlashClass != null)
{
    <div class="alert alert-@FlashClass alert-dismissible fade show" role="alert">
        @FlashMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="row">
    <form asp-controller="Entity" asp-action="EditCategories" method="POST">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Nombre</label>
            <input asp-for="Name" class="form-control" placeholder="Ingresa el nombre"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <hr/>
        <input type="hidden" asp-for="Id"/>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-plus"></i>Crear
        </button>
    </form>
</div>
