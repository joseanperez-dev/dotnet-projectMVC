@model projectMVC.Models.ViewModel
@{
    ViewData["Title"] = "Entity Framework - Categories";
    string FlashClass = (string) TempData["FlashClass"];
    string FlashMessage = (string) TempData["FlashMessage"];
}
<h1>Entity Framework - Products - Add</h1>
@if(FlashClass != null)
{
    <div class="alert alert-@FlashClass alert-dismissible fade show" role="alert">
        @FlashMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="row">
    <form asp-controller="Entity" asp-action="AddProducts" method="POST">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Product.Name" class="control-label">Nombre</label>
            <input asp-for="Product.Name" class="form-control" placeholder="Ingresa el nombre"/>
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Product.Descripction" class="control-label">Descripción</label>
            <textarea asp-for="Product.Descripction" class="form-control" placeholder="Ingresa la descripción"></textarea>
            <span asp-validation-for="Product.Descripction" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Product.Prize" class="control-label">Precio</label>
            <input asp-for="Product.Prize" class="form-control" placeholder="Ingresa el precio"/>
            <span asp-validation-for="Product.Prize" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Product.Stock" class="control-label">Stock</label>
            <input asp-for="Product.Stock" class="form-control" placeholder="Ingresa el stock"/>
            <span asp-validation-for="Product.Stock" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Product.CategoryId" class="control-label">Categoría</label>
            <select asp-for="Product.CategoryId" class="form-control">
                @foreach(var item in Model.Categories) 
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
        </div>
        <hr/>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-plus"></i>Crear
        </button>
    </form>
</div>
