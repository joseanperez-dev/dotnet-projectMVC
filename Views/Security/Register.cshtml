@model projectMVC.Models.User
@{
    ViewData["Title"] = "Security";
    string FlashClass = (string)TempData["FlashClass"];
    string FlashMessage = (string)TempData["FlashMessage"];
}
<h1>Crear cuenta</h1>
@if (FlashClass != null) {
    <div class="alert alert-@FlashClass alert-dismissible fade show" role="alert">
        @FlashMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="row">
    <form asp-controller="Security" asp-action="Register" method="POST">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Nombre"/>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" placeholder="Correo"/>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control" placeholder="ContraseÃ±a"/>
        </div>
        <hr/>
        <button type="submit" class="btn btn-success">Crear</button>
    </form>
</div>